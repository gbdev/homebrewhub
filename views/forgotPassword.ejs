<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Forgot Password</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <% if (resetRequestStatus != 'success') { %>
    <!-- FORGOT PASSWORD FORM -->
    <form action="/forgotPassword" method="post">
        <div class="form-group">
            <label>Type your eMail address or Username</label>
            <input type="text" class="form-control" name="username" required="required">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Recover Password</button>
    </form>

    <% } %> 

    <hr>

    <p>Do you remember it? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>


</div>
</div>
</body>
</html>
